{
  "info": {
    "name": "Citas API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "citas-api-collection"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "url": {"raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth","register"]},
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Juan Perez\",\n  \"username\": \"juan\",\n  \"password\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const data = pm.response.json();",
              "if (data && data.token) { pm.collectionVariables.set('token', data.token); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "url": {"raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth","login"]},
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"juan\",\n  \"password\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "Usuarios - List",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "{{baseUrl}}/usuarios", "host": ["{{baseUrl}}"], "path": ["usuarios"]}
      }
    },
    {
      "name": "Usuarios - Create",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "{{baseUrl}}/usuarios", "host": ["{{baseUrl}}"], "path": ["usuarios"]},
        "body": {"mode": "raw", "raw": "{\n  \"nombre\": \"Maria\",\n  \"username\": \"maria\",\n  \"password\": \"123456\"\n}"}
      }
    },
    {
      "name": "Vehiculos - List",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {"raw": "{{baseUrl}}/vehiculos", "host": ["{{baseUrl}}"], "path": ["vehiculos"]}
      }
    },
    {
      "name": "Vehiculos - Create",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "{{baseUrl}}/vehiculos", "host": ["{{baseUrl}}"], "path": ["vehiculos"]},
        "body": {"mode": "raw", "raw": "{\n  \"marca\": \"Toyota\",\n  \"modelo\": \"Corolla\",\n  \"placa\": \"P123ABC\",\n  \"tipo\": \"Sedan\",\n  \"usuario\": { \"id\": 1 }\n}"}
      }
    },
    {
      "name": "Citas - List",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
        "url": {"raw": "{{baseUrl}}/citas", "host": ["{{baseUrl}}"], "path": ["citas"]}
      }
    },
    {
      "name": "Citas - Create",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "{{baseUrl}}/citas", "host": ["{{baseUrl}}"], "path": ["citas"]},
        "body": {"mode": "raw", "raw": "{\n  \"fecha\": \"2025-01-01\",\n  \"hora\": \"10:00\",\n  \"comentario\": \"Revisi√≥n\",\n  \"motivo\": \"Mantenimiento\",\n  \"taller\": \"Taller Central\",\n  \"estado\": \"PENDIENTE\",\n  \"vehiculo\": { \"id\": 1 }\n}"}
      }
    }
  ],
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:9999"},
    {"key": "token", "value": ""}
  ]
}

